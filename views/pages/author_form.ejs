<h1>
  <%= title %>
</h1>
<form action="" method="POST">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input type="text" id="first_name" class="form-control" placeholder="First name" name="first_name" required="true"
      value="<% author === undefined ? '': author.first_name %>">
    <label for="family_name">Family Name:</label>
    <input type="text" id="family_name" class="form-control" placeholder="Familiy name" name="family_name"
      required="true" value="<% author === undefined ? '' : author.family_name %>">
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <input type="date" id="date_of_birth" class="form-control" name="date_of_birth"
      value="<% author === undefined ? '' : author.date_of_birth %>">
    <label for="date_of_death">Date of death:</label>
    <input type="date" id="date_of_death" class="form-control" name="date_of_death"
      value="<% author === undefined ? '' : author.date_of_death %>">
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>

</form>
<% if (errors) { %>
  <ul>
    <% errors.forEach(error=> { %>
      <li>
        <%= error.msg %>
      </li>
      <% }) %>
  </ul>
  <% } %>